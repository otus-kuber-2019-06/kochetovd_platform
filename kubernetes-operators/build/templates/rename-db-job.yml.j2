apiVersion: batch/v1
kind: Job
metadata:
  namespace: default
  name: renamedb-{{ name }}-job
  labels:
    usage: renamedb-{{ name }}-job
spec:
  template:
    metadata:
      name: renamedb-{{ name }}-cronjob
    spec:
      restartPolicy: OnFailure
      containers:
      - name: renamedb-{{ name }}
        image: {{ image }}
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "mysql  -u root -h {{ name }} -p{{ password }} -e \"CREATE DATABASE {{ database_new }}\" ; echo "create"; mysqldump -u root -h {{ name }} -p{{ password }} {{ database_old }} > /db.sql ; echo "dump"; mysqldump -u root -h {{ name }} -p{{ password }} {{ database_new }} < /db.sql ; echo "restore"; mysql  -u root -h {{ name }} -p{{ password }} -e \"DROP DATABASE {{ database_old }}\" "

